; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
ij_any_keep_indents_on_empty_lines = false

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
max_line_length = 120

[*.md]
indent_size = 4
trim_trailing_whitespace = false
